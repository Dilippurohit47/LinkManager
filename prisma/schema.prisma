generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  clerkId  String  
  password String?

}

model Room {
  id        Int      @id @default(autoincrement())
  clerkId   String   
  roomName  String
  createdAt DateTime @default(now())
  publicId String?
  links     Link[] 
  clicks Clicks[]
}


model Link {
  id       Int      @id @default(autoincrement())
  url      String
  title    String
  desc String
  roomId   Int     
  room     Room     @relation(fields: [roomId], references: [id],onDelete: Cascade) 
}


  model Clicks {
  id        Int      @id @default(autoincrement())
  roomId    Int      
  click     Json 
  device    Json?
  room      Room     @relation(fields: [roomId], references: [id],onDelete: Cascade) 
}